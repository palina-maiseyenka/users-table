<mvc:View
	controllerName="palina.maiseyenka.controller.UserDetails"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
	displayBlock="true"> 
	
	<f:DynamicPage
		id="detailsPage">
		<f:title>
			<f:DynamicPageTitle>
				<f:navigationActions>
					<Button type="Back" press=".onNavBack"/>
				</f:navigationActions>
				<f:heading>
					<Title text="{i18n>detailsPage}"/>	
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
		</f:header>
		<f:content>
			<VBox
				id="userFormContainer"
				class="sapUiSmallMargin">
				<core:Fragment fragmentName="palina.maiseyenka.view.fragments.UserDetailsDisplay" type="XML"/>
				<core:Fragment fragmentName="palina.maiseyenka.view.fragments.UserDetailsEdit" type="XML"/>
				<Button
					text="{i18n>saveBtn}"
					id="saveBtn"
					press=".onSaveBtnPress"
					visible="false"
					type="Default"
					icon="sap-icon://save"/>
				<core:Fragment fragmentName="palina.maiseyenka.view.fragments.SalaryChart" type="XML"/>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>   	