<mvc:View
	controllerName="palina.maiseyenka.controller.UserDetails"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
	displayBlock="true"> 	
	<f:DynamicPage
		id="detailsPage">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title
						text="{i18n>detailsPage}"
						class="sapUiTinyMargin"/>	
				</f:heading>
				<f:navigationActions>
					<Button type="Back" press=".onNavBack"/>
				</f:navigationActions>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<VBox
				id="userFormContainer"
				class="sapUiMediumMargin">
				<core:Fragment fragmentName="palina.maiseyenka.view.fragments.UserDetailsDisplay" type="XML"/>
				<core:Fragment fragmentName="palina.maiseyenka.view.fragments.UserDetailsEdit" type="XML"/>
				<core:Fragment fragmentName="palina.maiseyenka.view.fragments.SalaryChart" type="XML"/>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>   	