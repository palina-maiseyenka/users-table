<mvc:View
	controllerName="palina.maiseyenka.controller.UserDetails"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
	displayBlock="true"> 
	<Page
        title="{i18n>detailsPage}"
		id="detailsPage"
        floatingFooter="true"
		showNavButton="true"
		navButtonPress=".onNavBack">       
		<content>
		<VBox
			id="userFormContainer"
			class="sapUiSmallMargin">
		</VBox>
			<VBox class="sapUiSmallMargin">		
				<HBox>
					<Button
						text="{i18n>editBtn}"
						id="editBtn"
						press="onEditBtnPress"
						type="Default"
						icon="sap-icon://edit"/>
					<Button
						text="{i18n>deleteBtn}"
						id="deleteBtn"
						press="onDeleteBtnPress"
						class="sapUiMediumMarginBegin"
						type="Reject"
						icon="sap-icon://delete"/>
				</HBox>
			</VBox>
		</content>
	</Page>    
</mvc:View>   	