<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
        <f:SimpleForm
			id="userDetailsEdit" 
			visible="{appView>/fragmentsVisibility/userDetailsEdit}"
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false">
			<f:toolbar>
				<Toolbar>
					<Title text="{editedUser>/EditedUser/name/last} {editedUser>/EditedUser/name/first}"/>
					<Button
						text="{i18n>saveBtn}"
						id="saveBtn"
						press=".onSaveBtnPress"
						enabled="{appView>/buttonsVisibility/saveBtn}"
						type="Default"
						icon="sap-icon://save"/>
				</Toolbar>
			</f:toolbar>
			<f:content>
				<Label text="{i18n>name}"/>
				<Input
				    id="surnameInput"
				    change=".onInputChange"
					value="{
						path: 'usersData>name/last',
						type: 'palina.maiseyenka.model.customNameType'
					}">
                    <layoutData>
						<l:GridData span="XL2 L2 M2 S6"/>
					</layoutData>
				</Input>
				<Input
					value="{
						path: 'usersData>name/first',
						type: 'palina.maiseyenka.model.customNameType'
					}"
				    change=".onInputChange">
					<layoutData>
						<l:GridData span="XL3 L3 M3 S6"/>
					</layoutData>
				</Input>
				<Label text="Gender" labelFor="genderSelect"/>
				<ComboBox
					selectedKey="{usersData>gender}"
					>
					<core:Item key="male" text="male"/>
					<core:Item key="female" text="female"/>
				</ComboBox>
				<Label text="{i18n>age}"/>
				<Input
					value="{
						path: 'usersData>dob/age',
						type: 'sap.ui.model.type.Integer',
						constraints: {
							minimum: 0,
							maximum: 100
						}}"
				    change=".onInputChange"/>
				<Label text="{i18n>country}"/>
                <Input			
					value="{
						path: 'usersData>location/country',
						type: 'sap.ui.model.type.String',
						constraints: {
							minLength: 5
						}}"
				    change=".onInputChange"/>                
				<Label text="{i18n>city}"/>
                <Input
					value="{
						path: 'usersData>location/city',
						type: 'sap.ui.model.type.String',
						constraints: {
							minLength: 5
						}
					}"
				    change=".onInputChange"/>             
				<Label text="{i18n>email}"/>
                <Input
					value="{
						path: 'usersData>email',
						type: 'palina.maiseyenka.model.customEmailType'
					}"
				    change=".onInputChange"/>
			</f:content>
		</f:SimpleForm>
</core:FragmentDefinition>