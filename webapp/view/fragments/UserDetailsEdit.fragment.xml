<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
        <f:SimpleForm
			id="userDetailsEdit"
			visible="false"
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="{i18n>name}" />
				<Input
					value="{editedUser>name/last}"
					id="surnameInput">
                    <layoutData>
						<l:GridData span="XL2 L2 M2 S6"/>
					</layoutData>
				</Input>
				<Input
					value="{editedUser>name/first}"
					id="nameInput">
					<layoutData>
						<l:GridData span="XL3 L3 M3 S6"/>
					</layoutData>
				</Input>
				<Label text="Gender" labelFor="genderSelect"/>
				<Select
					id="genderSelect"
					selectedKey="{editedUser>gender}"
					forceSelection="false"
					>
					<core:Item key="male" text="male" />
					<core:Item key="female" text="female" />
				</Select>
				<Label text="{i18n>age}"/>
				<Input				
					value="{editedUser>dob/age}"
					id="ageInput"/>
				<Label text="{i18n>country}"/>
                <Input				
					value="{editedUser>location/country}"
					id="countryInput"/>                
				<Label text="{i18n>city}"/>
                <Input
					value="{editedUser>location/city}"					
					id="cityInput"/>             
				<Label text="{i18n>email}"/>
                <Input
					value="{editedUser>email}"
					id="emailInput"/>
			</f:content>
		</f:SimpleForm>
</core:FragmentDefinition>