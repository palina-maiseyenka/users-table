<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
        <f:SimpleForm
            id="userDetailsDisplay"
			visible="{appView>/fragmentsVisibility/userDetailsDisplay}"
			editable="false"
			layout="ResponsiveGridLayout"
			labelSpanXL="1"
			labelSpanL="1"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false">
			<f:toolbar>
				<Toolbar>
					<Title text="{usersData>name/last} {usersData>name/first}"/>
					<Button
						text="{i18n>editBtn}"
						id="editBtn"
						press="onEditBtnPress"
						type="Default"
						icon="sap-icon://edit"/>
				</Toolbar>
			</f:toolbar>
			<f:content>
				<Label text="{i18n>gender}" />
				<Text text="{usersData>gender}"/>
				<Label text="{i18n>age}" />
				<Text text="{usersData>dob/age}"/>
				<Label text="{i18n>country}" />
                <Text text="{usersData>location/country}"/>                
				<Label text="{i18n>city}" />
                <Text text="{usersData>location/city}"/>
				<Label text="{i18n>email}" />
				<Text text="{usersData>email}">
				</Text>
			</f:content>
		</f:SimpleForm>
</core:FragmentDefinition>