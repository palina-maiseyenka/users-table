<core:FragmentDefinition
	xmlns="sap.suite.ui.microchart"
    xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:card="sap.f.cards"
	xmlns:core="sap.ui.core">    
    <f:Card
        id="salaryChart"
        height="300px"
        class="sapUiMediumMarginTop">
        <f:header>
            <card:Header
                title="{i18n>salaryChartTitle}"/>
        </f:header>
        <f:content>
            <InteractiveLineChart
                points="{usersData>salariesData}"
                displayedPoints="12"
                selectionEnabled="false">
                <points>
                    <InteractiveLineChartPoint
                        value="{usersData>salary}"
                        label="{usersData>label}"/>
                </points>
            </InteractiveLineChart> 
        </f:content>
    </f:Card>        
    <m:Text
        visible="false"
        id="noSalaryDataText"
        text="{i18n>noSalaryDataText}"/>       
</core:FragmentDefinition>