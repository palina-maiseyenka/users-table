<core:FragmentDefinition
	xmlns="sap.suite.ui.microchart"
    xmlns:m="sap.m"
	xmlns:core="sap.ui.core">
    <InteractiveLineChart
        visible="false"
        id="salaryChart"
        points="{usersData>salariesData}"
        displayedPoints="12"
        selectionEnabled="true">
        <points>
            <InteractiveLineChartPoint
                value="{usersData>salary}"
                label="{usersData>label}"
                color="{= ${usersData>salary} > 2850 ? 'Good' : 'Neutral' }"
                />
        </points>
    </InteractiveLineChart> 
    <m:Text
        visible="false"
        id="noSalaryDataText"
        text="No salary data avaliable for this user."/>       
</core:FragmentDefinition>