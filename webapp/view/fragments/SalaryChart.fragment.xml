<core:FragmentDefinition
	xmlns="sap.suite.ui.microchart"
    xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:card="sap.f.cards"
	xmlns:core="sap.ui.core">    
    <f:Card
        id="salaryChart"
        height="20em">
        <f:header>
            <card:Header
                title="{i18n>salaryChartTitle}"/>
        </f:header>
        <f:content>
            <InteractiveLineChart
                points="{usersData>salariesData}"
                displayedPoints="12"
                selectionEnabled="false">
                <points>
                    <InteractiveLineChartPoint
                        value="{usersData>salary}"
                        label="{usersData>label}"/>
                </points>
            </InteractiveLineChart> 
        </f:content>
    </f:Card> 
    <m:MessageStrip
        text="{i18n>noSalaryDataText}"
        type="Warning"
        showIcon="true"
        visible="{appView>/fragmentsVisibility/noSalaryDataText}"
        class="sapUiMediumMarginBottom">
	</m:MessageStrip>    
</core:FragmentDefinition>