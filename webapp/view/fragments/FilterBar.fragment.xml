<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core">
    <fb:FilterBar
        id="filterbar"
        useToolbar="false"
        showGoOnFB="false"
        showClearOnFB="true"
        showClearButton="true"
        clear=".onClearFiltersBtnPress">
        <fb:filterItems
            items="{usersData>/FilterFunctions}">
            <fb:FilterItem name="nameFilter" label="{i18n>byNameLabel}">
                <fb:control>							
                    <Input
                        id="nameFilter"
                        change=".onFilterChange('_createNameFilter')"
                        placeholder="{i18n>namePlaceholder}"/>
                </fb:control>		
            </fb:FilterItem>								
            <fb:FilterItem name="ageFilter" label="{i18n>byAgeLabel}">
                <fb:control>
                    <FlexBox
					alignItems="Stretch">
					<items>			
                        <Select      
                            selectedKey="more"
                            id="ageComparison">
                            <core:Item
                                key="more" 
                                text="{i18n>more}"/>
                            <core:Item
                                key="less"
                                text="{i18n>less}"/>
                                <layoutData>
								<FlexItemData growFactor="1" />
							</layoutData>
                        </Select>
                        <Input
                            id="ageFilter"  
                            type="Number"
                            change=".onFilterChange('_createAgeFilter')"
                            placeholder="{i18n>agePlaceholder}">
                            <layoutData>
								<FlexItemData growFactor="2" />
							</layoutData>
                        </Input>
                    </items>
				</FlexBox>
                </fb:control>				
            </fb:FilterItem>	
            <fb:FilterItem name="genderFilter" label="{i18n>byGenderLabel}">
                <fb:control>
                    <ComboBox
                        id="genderFilter"
                        placeholder="{i18n>genderPlaceholder}"
                        change=".onFilterChange('_createGenderFilter')">
                        <core:Item
                            key="male"
                            text="{i18n>male}" />
                        <core:Item
                            key="female"
                            text="{i18n>female}" />
                    </ComboBox>
                </fb:control>				
            </fb:FilterItem>
        </fb:filterItems>
    </fb:FilterBar>
</core:FragmentDefinition>