<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:l="sap.ui.layout"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="addUserDialog"
      title="{i18n>addUserModalTitle}"
      contentWidth="30%"
      class="sapUiContentPadding">
      <content>
         <Label text="{i18n>name}" labelFor="nameInput"/>
         <Input required="true" id="nameInput"/>
         <Label text="{i18n>surname}" labelFor="surnameInput"/>
         <Input required="true" id="surnameInput"/>
         <Label text="{i18n>gender}" labelFor="genderSelect"/>
         <Select
            id="genderSelect"
            forceSelection="false"
            autoAdjustWidth="false"
            width="100%"
            >
            <core:Item key="male" text="male" />
            <core:Item key="female" text="female" />
         </Select>
         <Label text="{i18n>age}" labelFor="ageInput"/>
         <Input required="true" id="ageInput" type="Number"/>
         <Label text="{i18n>country}" labelFor="countryInput"/>
         <Input required="true" id="countryInput"/>
         <Label text="{i18n>city}" labelFor="cityInput"/>
         <Input required="true" id="cityInput"/>
         <Label text="{i18n>email}" labelFor="emailInput"/>
         <Input required="true" id="emailInput"/> 
      </content>
      <beginButton>
			<Button
				text="{i18n>submitBtn}"
            type="Accept"
            press=".onSubmitDialog"/>
		</beginButton>
      <endButton>
			<Button
				text="{i18n>closeBtn}"
				press=".onCloseDialog"/>
		</endButton>
   </Dialog>
</core:FragmentDefinition>